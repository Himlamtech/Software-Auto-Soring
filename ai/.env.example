# =============================================================================
# UML Auto Scoring AI - Environment Configuration
# =============================================================================
# Copy this file to .env and update the values according to your setup

# =============================================================================
# Application Configuration
# =============================================================================
APP_NAME="UML Auto Scoring AI"
APP_VERSION="0.1.0"
DEBUG=false

# =============================================================================
# API Configuration
# =============================================================================
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1
CORS_ORIGINS=["*"]

# =============================================================================
# Storage Configuration
# =============================================================================
STORAGE_PATH=./data
MAX_FILE_SIZE=10485760
ALLOWED_FILE_EXTENSIONS=[".puml", ".txt", ".plantuml"]

# =============================================================================
# LLM Provider Selection
# =============================================================================
# Choose which LLM provider to use: "openai" or "gemini"
LLM_PROVIDER=openai

# =============================================================================
# OpenAI Configuration
# =============================================================================
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here
LLM_MODEL=gpt-4o-mini
LLM_TEMPERATURE=0.1
LLM_MAX_TOKENS=2000
LLM_TIMEOUT=60

# =============================================================================
# Google Gemini Configuration
# =============================================================================
# Get your API key from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-1.5-flash
GEMINI_TEMPERATURE=0.1
GEMINI_MAX_TOKENS=2000
GEMINI_TIMEOUT=60

# =============================================================================
# Scoring Configuration
# =============================================================================
# Weights for different component types (must sum to 1.0 for best results)
DEFAULT_ACTOR_WEIGHT=0.3
DEFAULT_USECASE_WEIGHT=0.5
DEFAULT_RELATIONSHIP_WEIGHT=0.2
SIMILARITY_THRESHOLD=0.8

# =============================================================================
# PlantUML Configuration
# =============================================================================
# Path to plantuml.jar file (optional, for local diagram generation)
PLANTUML_JAR_PATH=/path/to/plantuml.jar
# Use online PlantUML service (true/false)
USE_ONLINE_PLANTUML=false
PLANTUML_ONLINE_URL=http://www.plantuml.com/plantuml

# =============================================================================
# Processing Configuration
# =============================================================================
MAX_CONCURRENT_REQUESTS=10
REQUEST_TIMEOUT=300
BATCH_SIZE=50

# =============================================================================
# Logging Configuration
# =============================================================================
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log
LOG_ROTATION="1 day"
LOG_RETENTION="30 days"

# =============================================================================
# Security Configuration
# =============================================================================
API_KEY_HEADER="X-API-Key"
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# =============================================================================
# Cache Configuration
# =============================================================================
CACHE_ENABLED=true
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# =============================================================================
# Analytics Configuration
# =============================================================================
ENABLE_ANALYTICS=true
ANALYTICS_RETENTION_DAYS=90

# =============================================================================
# Example Usage Instructions
# =============================================================================
# 1. Copy this file: cp env.example .env
# 2. Edit .env file with your actual values
# 3. Set your API keys for the LLM providers you want to use
# 4. Choose your preferred LLM provider with LLM_PROVIDER setting
# 5. Adjust scoring weights and other parameters as needed
# 6. Run the application: python main.py

# =============================================================================
# Security Notes
# =============================================================================
# - Never commit your .env file to version control
# - Keep your API keys secure and rotate them regularly
# - Use environment-specific configurations for different deployments
# - Consider using a secrets management system for production deployments
